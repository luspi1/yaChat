<div class="contact-panel">
	<div class="contact-panel__avatar">
		<img src="{{avatar-src}}" alt="avatar">
	</div>
	<p class="contact-panel__name">{{name}}</p>
	<p class="contact-panel__status {{status}}">{{label}}</p>
	<button class="contact-panel__menu-btn">
		<svg width="5" height="21" viewBox="0 0 5 21" fill="none" xmlns="http://www.w3.org/2000/svg">
			<circle cx="2.5" cy="2.5" r="2.5" fill="#FFFBFB"/>
			<circle cx="2.5" cy="10.5" r="2.5" fill="#FFFBFB"/>
			<circle cx="2.5" cy="18.5" r="2.5" fill="#FFFBFB"/>
		</svg>
	</button>
</div>
